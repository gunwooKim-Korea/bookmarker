<h1 class ="logo large">Book Marker</h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="forceColor"></div>
  <div class="form_row_email">
    <%= f.input :username, placeholder: 'Username', label: false, required: true, autofocus: true, input_html: { class:  'input' } %>
    <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true, input_html: { class:  'input' } %>
    <%= f.input :password, placeholder: 'Password (6 characters minimum)', label: false, required: true, input_html: {:class => "input"} %>
    <%= f.input :password_confirmation, placeholder: 'Password Confirmation', label: false, required: true, input_html: { class:  'input' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", class: 'btn sign_up' %>
  </div>

<% end %>
