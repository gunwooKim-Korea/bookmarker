<h1 class ="logo large">Book Marker</h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="forceColor"></div>
  <div class="form_row_email">
    <div class="spanColor" ></div>
    <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true, input_html: { class:  'input' } %>
    <%= f.input :password, placeholder: 'Password', label: false, required: true, input_html: {:class => "input"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "로그인" %>
    <%= link_to "회원가입", new_registration_path(resource_name), class: 'btn sign_up' %>
  </div>

<% end %>
